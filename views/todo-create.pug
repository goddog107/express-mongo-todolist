extends layout.pug

block content
  h1 New Todo
  hr
  if message
    if type == 'success'
      p(class='alert alert-info') "#{todo.description}" created successfully! 
    else
      p(class='alert alert-danger') #{message}

  form(action = "/todo-create", method = "POST")
    div.form-group
      label(for = "date") Date
      input.form-control(name = "date", required, type='date', style='width: 250px')
    div.form-group
      label(for = "description") Description
      textarea.form-control(name = "description", rows=5, required)
    br
    button(type = "submit", class="btn btn-primary") Save
    a(class="btn btn-default", href="/todos", style="margin-left: 10px") Cancel

