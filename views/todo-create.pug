extends layout.pug

block content
  h1 Todo edit
  hr
  if message
    if type == 'success'
      p(class='alert alert-info') "#{todo.title}" #{message} 
    else
      p(class='alert alert-danger') #{message}

  form(action = "/todo-create", method = "POST")
    div.form-group
      label(for = "title") Title
      input.form-control(name = "title", required)
    div.form-group
      label(for = "description") Description
      textarea.form-control(name = "description", rows=5, required)
    br
    button(type = "submit", class="btn btn-primary") Save
    a(class="btn btn-default", href="/todos", style="margin-left: 10px") Cancel

